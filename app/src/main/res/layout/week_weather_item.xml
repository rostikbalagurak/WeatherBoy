<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:padding="20dp"
    android:layout_height="130dp">

    <TextView
        android:id="@+id/tv_week_day"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:text="Sunday" />

    <TextView
        android:id="@+id/tv_date"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="24 April" />


    <ImageView
        android:id="@+id/iv_week_day_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_day_temperature"
        android:layout_toRightOf="@+id/tv_week_day"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/cloudy_icon" />


    <TextView
        android:id="@+id/tv_day_temperature"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:text="10 C" />

    <TextView
        android:id="@+id/tv_night_temperature"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="2 C" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 a.m."
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_time1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cloudy_icon" />

        <TextView
            android:id="@+id/tv_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 C"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 a.m."
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_time2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cloudy_icon" />

        <TextView
            android:id="@+id/tv_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 C"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 a.m."
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_time3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cloudy_icon" />

        <TextView
            android:id="@+id/tv_temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 C"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 a.m."
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_time4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/cloudy_icon" />

        <TextView
            android:id="@+id/tv_temp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 C"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>